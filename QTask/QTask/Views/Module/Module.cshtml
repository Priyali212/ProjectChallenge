@{
    ViewData["Title"] = "Module";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- main-content-div start -->
<div class="main-content-div">
    @{
        if ((Context.Items["edit"] != null && Context.Items["edit"].ToString().Trim() != "" && Convert.ToInt32(Context.Items["edit"].ToString().Trim()) == 1) || Context.Session.GetInt32("IsAdmin") == 1)
        {
            <!-- popup-add-role-div start -->
            <div class="popup-add-role-div">
                <div class="create-role-div">
                    <h3 class="mbt-1">
                        <span>
                            <i class="fa fa-plus"></i> Create Module
                        </span> <a href="javascript:void(0)"><i class="fa fa-times"></i></a>
                    </h3>
                    <div class="create-role-form-div">

                        <div class="form-input-div mbt-1">
                            <label>Name</label>
                            <input type="text" class="f-input" id="txtModuleName">
                        </div>

                        <div class="div-flex gap-1 justify-right">
                            <button id="btnModuleSave" class="button blue-btn"><i class="fa fa-save"></i> Save</button>
                            <button class="button blue-btn"><i class="fa fa-times"></i> Cancel</button>
                        </div>
                    </div>
                </div>

            </div>
            <!-- popup-add-role-div end -->
        }
    }


    <div class="padder">
        <div class="heading-div">
            <h2 class="mbt-1 heading-2"><i class="fa fa-tasks"></i> Modules</h2>
