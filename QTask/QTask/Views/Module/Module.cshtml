                }
            }

        </ul>
    </div>
</div>
<!-- slide-role-setting-div end -->
<!-- slide-bulk-div start -->
<div class="slide-bulk-div nav-bar">
    <ul>
        <li><a href="javascript:void(0)" class="btn-back-setting"><i class="fa fa-arrow-right ico round-bg"></i> Back</a></li>
        @{
            if ((Context.Items["delete"] != null && Context.Items["delete"].ToString().Trim() != "" && Convert.ToInt32(Context.Items["delete"].ToString().Trim()) == 1) || Context.Session.GetInt32("IsAdmin") == 1)
            {
                <li><a href="javascript:void(0)"><i class="fa fa-trash ico round-bg"></i> Delete</a></li>
            }
            <li><a href="card-view.html"><i class="fa fa-id-card ico round-bg"></i> Card View</a></li>
            if ((Context.Items["import"] != null && Context.Items["import"].ToString().Trim() != "" && Convert.ToInt32(Context.Items["import"].ToString().Trim()) == 1) || Context.Session.GetInt32("IsAdmin") == 1)
            {
                <li><a href="javascript:void(0)"><i class="fa fa-file-import ico round-bg"></i> Import</a></li>
            }
            if ((Context.Items["export"] != null && Context.Items["export"].ToString().Trim() != "" && Convert.ToInt32(Context.Items["export"].ToString().Trim()) == 1) || Context.Session.GetInt32("IsAdmin") == 1)
            {
                <li><a href="javascript:void(0)"><i class="fa fa-file-export ico round-bg"></i> Export</a></li>
            }
            <li><a href="javascript:void(0)" class=""><i class="fa fa-code-branch ico round-bg"></i> Merge</a></li>
            if ((Context.Items["massupdate"] != null && Context.Items["massupdate"].ToString().Trim() != "" && Convert.ToInt32(Context.Items["massupdate"].ToString().Trim()) == 1) || Context.Session.GetInt32("IsAdmin") == 1)
            {
                <li><a href="javascript:void(0)"><i class="fa fa-pen ico round-bg"></i> Mass Update</a></li>
            }
            <li><a href="javascript:void(0)" class=""><i class="fa fa-plus ico round-bg"></i> Add To Target List</a></li>
            <li><a href="javascript:void(0)" class=""><i class="fa fa-file-pdf ico round-bg"></i> Print As PDF</a></li>
        }
    </ul>
</div>
<!-- slide-bulk-div end -->
<!-- slide-action-div start -->
<div class="slide-action-div">
    <div class="nav-bar">
        <ul>
            <li><a href="javascript:void(0)" class="btn-back-setting"><i class="fa fa-arrow-right ico round-bg"></i> Back</a></li>
