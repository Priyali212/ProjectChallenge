    </div>
    @{
        if ((Context.Items["edit"] != null && Context.Items["edit"].ToString().Trim() != "" && Convert.ToInt32(Context.Items["edit"].ToString().Trim()) == 1) || Context.Session.GetInt32("IsAdmin") == 1)
        {
            <!-- slide-add-role-div start -->
            <div class="slide-add-role-div nav-bar">
                <ul>
                    <li><a href="javascript:void(0)" class="btn-back-setting"><i class="fa fa-arrow-right ico round-bg"></i> Back</a></li>
                    <li><a href="javascript:void(0)" class="btn-popup-add-banner-div"><i class="fa fa-plus ico round-bg"></i> Create</a></li>
